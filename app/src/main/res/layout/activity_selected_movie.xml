<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="app.com.example.pipob.popularmoviesapp.SelectedMovie">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:id="@+id/img_Detailed_Movie_Poster"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#161616" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MovieTitle"
            android:id="@+id/txt_Detailed_Movie_Title"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/img_Detailed_Movie_Poster"
            android:layout_toEndOf="@+id/img_Detailed_Movie_Poster"
            android:layout_above="@+id/txt_Detailed_Movie_Rating"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="#202020"
            android:textColor="#ffffff" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_Detailed_Movie_Rating"
            android:stepSize="0.10"
            android:nestedScrollingEnabled="false"
            android:numStars="1"
            android:layout_below="@+id/img_Detailed_Movie_Poster"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#d3d3d3"
            android:isIndicator="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5.0"
            android:id="@+id/txt_Detailed_Movie_Rating"
            android:layout_alignBottom="@+id/rating_Detailed_Movie_Rating"
            android:layout_below="@+id/img_Detailed_Movie_Poster"
            android:layout_toRightOf="@+id/rating_Detailed_Movie_Rating"
            android:layout_alignRight="@+id/img_Detailed_Movie_Poster"
            android:layout_alignEnd="@+id/img_Detailed_Movie_Poster"
            android:gravity="center"
            android:background="#a6a6a6" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="OverView"
            android:id="@+id/txt_Detailed_Movie_Overview"

            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@+id/rating_Detailed_Movie_Rating"
            android:background="#e7e7e7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/txt_Detailed_Movie_Date"
            android:layout_above="@+id/txt_Detailed_Movie_Overview"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/txt_Detailed_Movie_Title"
            android:layout_alignStart="@+id/txt_Detailed_Movie_Title"
            android:layout_below="@+id/txt_Detailed_Movie_Title"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="#505050"
            android:textColor="#ffffff" />
    </RelativeLayout>


</RelativeLayout>
